/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header{
  width: 100%;
  height: 300rpx;
}
.header{
  position: relative;
}
.header image{
  height: 100%;
  width: 100%;
}
.date{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 300rpx;
  height: 100rpx;
  margin-left: -150rpx;
  margin-top: -50rpx;
  /* border: 1rpx solid red; */
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: bolder;
}
.listContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  background-color: white;
}
.listHeader{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
}
.chooseMore{
  float: right;
  /* width: 100%; */
}
/* //内容区样式 */

/* 列表区域 */
.ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore {
  float: right;
  color: black;
}


/* 内容区 */
.listScroll {
  height: calc(100vh - 380rpx);
}
.scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;

}

.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}


